<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Alexandria:wght@100..900&display=swap" rel="stylesheet">
    <style>
        html, body {
            width: 100%;
            height: 100%;
            font-family: Alexandria;
            margin: 0;
            background: aliceblue;
        }
        h1 {
            width: 70%;
            max-width: 500px;
            text-align: center;
            color: darkblue;
        }
        main {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            width: 100%;
            height: 100%;
        }
        #url_form {
            width: calc(70% + 15px);
            max-width: 515px;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        input, button {
            margin: 5px;
            padding: 10px;
            outline: none;
            border: 2px solid darkblue;
            color: darkblue;
            transition: 0.3s;
        }
        input {
            width: calc(100% - 150px);
        }
        button {
            background-color: darkblue;
            color: white;
        }
        button:hover {
            background-color: rgb(255, 255, 255);
            color: darkblue;
        }
        ::placeholder{
            color: rgb(74, 74, 156);
        }
        input, button, ::placeholder {
            font-family: Alexandria;
            font-size: 13px;
        }
        #response, #errors {
            width: 70%;
            max-width: 500px;
            font-size: 13px;
            text-align: center;
            border: 2px solid darkgreen;
            border-radius: 5px;
            background: #dafff3;
            margin: 20px;
            display: none;
            position: relative;
        }
        #response {
            padding-bottom: 22px;
        }
        #errors {
            width: calc(70% - 40px);
            max-width: 460px;
            text-align: left;
            border-color: maroon;
            background-color: rgb(255, 220, 220);
            padding: 10px 20px;
        }
        #errors p {
            margin: 3px;
        }
        #copybtn {
            padding: 3px;
            border: 1px solid black;
            background: white;
            position: absolute;
            right: 5px;
            bottom: 5px;
            border-radius: 3px;
        }
        .data_ctnr {
            width: 80%;
            max-width: 660px;
            border: 2px solid gainsboro;
            margin: 30px auto;
            margin-top: 10px;
            background: white;
            padding: 15px 0;
            border-radius: 9px;
        }
        .data {
            width: calc(100% - 40px);
            padding: 10px 20px;
            display: flex;
            font-size: 13px;
            justify-content: space-between;
        }
        .data_index {
            width: 55px;
        }
        .data_actualURL {
            width: calc( 50% - 30px );
            text-overflow: ellipsis;
            overflow: hidden; 
            white-space: nowrap;
        }
        .data_createdURL {
            width: calc( 50% - 25px );
            text-overflow: ellipsis;
            overflow: hidden; 
            white-space: nowrap;
        }
    </style>
</head>
<body>
    <main>
        <h1>Madam URL Shortner</h1>
        <form id="url_form">
            <input type="text" name="url_data" id="url_data" placeholder="Enter URL">
            <button type="submit">Shorten URL</button>
        </form>
        <div id="response">
        </div>
        <div id="errors"></div>
        <h3 style="text-align: center; margin: 10px; margin-top: 30px;">Your previous URLs</h3>
        <div class="data_ctnr">
            <div class="data">
                <div class="data_index">Sr. No.</div>
                <div class="data_actualURL">Redirection URL</div>
                <div class="data_createdURL">Shortened URL</div>
            </div>
            <% if (locals.urls && locals.urls.length > 0) { %>
                <% urls.forEach((url, i) => { %>
                    <hr style="width: 100%; border: 0.5px solid gainsboro;">
                    <div class="data">
                        <div class="data_index"><%= i + 1 %></div>
                        <div class="data_actualURL"><%= url.redirectURL %></div>
                        <div class="data_createdURL"><a href="http://localhost:3000/<%= url.shortId %>">http://localhost:3000/<%= url.shortId %></a></div>
                    </div>
                <% })} else { %>
                    <div style="text-align: center;font-size: 15px;padding: 12px;color: red;">No previous data!</div>
            <% } %>
        </div>
    </main>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.7.3/axios.min.js"></script>
    <script>
        const form = document.getElementById("url_form")
        const url = document.getElementById("url_data")
        const errors = document.getElementById("errors")
        const response = document.getElementById("response")
        
        let prevURL = url.value
        
        const copyURL = async (e) => {
          const copybtn = document.getElementById("copybtn")
          var copyText = document.getElementById("link").textContent;
          await navigator.clipboard.writeText(copyText);

          copybtn.innerText = "URL Copied"
        }

        form.addEventListener("submit", (e)=>{
            e.preventDefault()
            if(url.value === prevURL) {
                return;
            }
            errors.style.display = "none";
            response.style.display = "none";
            prevURL = url.value;

            axios.post("http://localhost:3000/url", { redirectURL : url.value })
                .then((res)=> {
                    const urlEncoded = `http://localhost:3000/${res.data.id}`
                    response.innerHTML = `<div id="copybtn" onclick="copyURL()">Copy URL</div><p>Your shortened URL is: <a href="${urlEncoded}" style="color: black;" id="link">${urlEncoded}</a></p>`;
                    response.style.display = "block";
                })
                .catch((err)=> {
                    errors.innerHTML = "Error occured: " + err.response.data.error.map(error => `<p>- ${error}</p>`).join("") || err.message;
                    errors.style.display = "block";
                })
        })
    </script>
</body>
</html>